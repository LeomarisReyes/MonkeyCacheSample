                 xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="MonkeyCacheSample.Views.PopUpWarning"> 
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Frame WidthRequest="350" HasShadow="True" HeightRequest="160" Margin="40,10,40,0">
          <StackLayout> 
              <Image Source = "ConnectionError" WidthRequest="70" HeightRequest="80" />
